{
    "name": "ts-react-redux-observable-typesafe",
    "version": "0.1.0",
    "private": true,
    "dependencies": {
        "@material-ui/core": "^4.11.0",
        "@material-ui/icons": "^4.9.1",
        "axios": "^0.20.0",
        "lodash": "^4.17.20",
        "re-reselect": "^4.0.0",
        "react": "^16.13.1",
        "react-dom": "^16.13.1",
        "react-redux": "^7.2.1",
        "redux": "^4.0.5",
        "redux-devtools-extension": "^2.13.8",
        "redux-observable": "^1.2.0",
        "redux-thunk": "2.3.0",
        "reselect": "^4.0.0",
        "rxjs": "^6.6.2",
        "styled-components": "^5.2.0",
        "typesafe-actions": "^5.1.0"
    },
    "devDependencies": {
        "@testing-library/jest-dom": "^5.11.4",
        "@testing-library/react": "^11.0.4",
        "@testing-library/react-hooks": "^3.4.2",
        "@testing-library/user-event": "^12.1.7",
        "@types/enzyme": "^3.10.7",
        "@types/enzyme-adapter-react-16": "^1.0.6",
        "@types/jest": "^26.0.14",
        "@types/lodash": "^4.14.161",
        "@types/node": "^14.11.5",
        "@types/react": "^16.9.0",
        "@types/react-dom": "^16.9.0",
        "@types/react-redux": "^7.1.9",
        "@types/styled-components": "^5.1.3",
        "axios-mock-adapter": "^1.18.2",
        "enzyme": "^3.11.0",
        "enzyme-adapter-react-16": "^1.15.5",
        "eslint-config-prettier": "^6.12.0",
        "prettier": "^2.1.2",
        "react-app-rewired": "^2.1.6",
        "react-scripts": "3.4.3",
        "typescript": "^4.0.3"
    },
    "scripts": {
        "start": "react-app-rewired start",
        "build": "react-app-rewired build",
        "test": "react-app-rewired test --watchAll=false",
        "test-watch": "react-app-rewired test",
        "coverage": "react-app-rewired test --watchAll=false --coverage",
        "eject": "react-scripts eject"
    },
    "jest": {
        "collectCoverageFrom": [
            "src/**/*.{js,jsx,ts,tsx}",
            "!**/mocks/**",
            "!**/testUtils.{js,jsx,ts,tsx}",
            "!**/node_modules/**",
            "!**/vendor/**"
        ],
        "coverageThreshold": {
            "global": {
                "branches": 90,
                "functions": 90,
                "lines": 90,
                "statements": 90
            }
        },
        "coverageReporters": [
            "text"
        ]
    },
    "eslintConfig": {
        "extends": [
            "react-app",
            "prettier",
            "prettier/@typescript-eslint",
            "prettier/babel",
            "prettier/react"
        ],
        "rules": {
            "curly": [
                "error",
                "all"
            ],
            "comma-dangle": [
                "error",
                "always-multiline"
            ],
            "max-len": [
                "error",
                {
                    "code": 120,
                    "tabWidth": 4
                }
            ]
        }
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    }
}
